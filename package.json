{
  "name": "overtype",
  "version": "1.1.0",
  "description": "A lightweight markdown editor library with perfect WYSIWYG alignment using an invisible textarea overlay",
  "main": "dist/overtype.js",
  "module": "dist/overtype.esm.js",
  "unpkg": "dist/overtype.min.js",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "dev": "http-server -p 8080 -c-1",
    "watch": "node build.js --watch",
    "test": "node test/overtype.test.js",
    "size": "gzip-size dist/overtype.min.js",
    "serve": "http-server -p 8080 -c-1"
  },
  "keywords": [
    "markdown",
    "editor",
    "wysiwyg",
    "lightweight",
    "ghost-caret",
    "textarea",
    "markdown-editor"
  ],
  "author": "David Miranda",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "gzip-size-cli": "^5.1.0",
    "http-server": "^14.1.1"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "diagram.png"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panphora/overtype.git"
  },
  "bugs": {
    "url": "https://github.com/panphora/overtype/issues"
  },
  "homepage": "https://github.com/panphora/overtype#readme",
  "dependencies": {
    "@floating-ui/dom": "^1.7.3",
    "markdown-actions": "^1.1.2"
  }
}
